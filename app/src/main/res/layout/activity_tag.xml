<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".TagActivity"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/Appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat">

        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <!-- 툴바와 중앙 화면을 나누는 선 -->
    <LinearLayout
        android:id="@+id/toolbar_division"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/Appbar"
        android:background="@color/colorDivision"
        android:orientation="horizontal"
        />


    <TextView
        android:id="@+id/textview0"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:text="               선호태그 등록"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        />
    <View
        android:id="@+id/view_line"
        android:layout_width="300dp"
        android:layout_height="1.2dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_dark" />


    <TextView
        android:id="@+id/textview1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="지역"
        android:textSize="23dp"
        />
    <EditText
        android:id="@+id/pre_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:hint="태그를 입력하세요"
        />
    <TextView
        android:id="@+id/textview2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="#연남동 #홍대 #연트럴파크"
        android:textSize="15dp"
        android:textColor="@color/light_blue"
        />


    <TextView
        android:id="@+id/textview3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="식사"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/pre_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:hint="태그를 입력하세요"
        />
    <TextView
        android:id="@+id/textview4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="#양식 #파스타 #초밥"
        android:textSize="15dp"
        android:textColor="@color/light_blue"
        />

    <TextView
        android:id="@+id/textview5"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="기타"
        android:textSize="23dp"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/pre_etc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:hint="태그를 입력하세요 (선택사항)"
        />
    <TextView
        android:id="@+id/textview6"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:text="#봄 #벚꽃 #실내데이트"
        android:textSize="15dp"
        android:textColor="@color/light_blue"
        />

    <Button
        android:id="@+id/pre_submit"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="등록하기"
        android:theme="@style/ButtonStyle"
        />


</LinearLayout>

